{
    "name": "mihai-stancu/serializer",
    "license": "MIT",
    "type": "library",

    "description": "",
    "keywords": ["serialization", "encoders", "marshaling"],

    "authors": [
        {
            "name": "Mihai Stancu",
            "email": "stancu.t.mihai@gmail.com"
        }
    ],

    "require": {
        "php": ">=5.3",

        "symfony/dependency-injection": "2.*",
        "symfony/serializer": "2.*",
        "symfony/config": "2.*",
        "symfony/http-kernel": "2.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.1"
    },

    "suggest": {
        "ext-igbinary": "For the IGBinary format (Binary PHP serialize/unserialize replacement).",
        "ext-libsmile": "For the Smile format.",
        "ext-mongo": "For the BSON format.",
        "ext-msgpack": "For the MessagePack format.",

        "rych/bencode": "For the Bencode format.",
        "2tvenom/cborencode": "For the CBOR format.",
        "mihai-stancu/sereal": "For the Sereal format.",
        "phuedx/tnetstring": "For the TNetString format.",
        "dizews/php-ubjson": "For the UBJSON format.",
        "symfony/yaml": "For the YAML format."
    },

    "autoload": {
        "psr-4": {
          "MS\\SerializerBundle\\": "src/"
        }
    },
    "config": {
        "preferred-install": "source"
    }
}
